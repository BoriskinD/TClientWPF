<Window x:Class="TClientWPF.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:TClientWPF.Views" 
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="450.88" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="268*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Height="28" Margin="25,22,17,10" Width="135">ID приложения (Api ID)</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" 
                   Height="21" Margin="61,22,44,17" Width="72">Хэш приложения (Api Hash)</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Height="22" Margin="51,22,34,17" Width="92">Номер телефона (Phone number)</TextBlock>
      
        <TextBlock Grid.Row="4" Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Height="29" Margin="51,21,34,10" Width="92">Что ищем?</TextBlock>

        <TextBox Name="ApiId" Text="{Binding Api_id, Mode=TwoWay}"
                 Grid.Column="1" Grid.Row="0"/>
        <TextBox Name="ApiHash" Text="{Binding Api_hash, Mode=TwoWay}"
                 Grid.Column="1" Grid.Row="1" Margin="0,0,0,58" Grid.RowSpan="2"/>
        <TextBox Name="PhoneNumber" Text="{Binding Phone_Number, Mode=TwoWay}"
                 Grid.Column="1" Grid.Row="2" Margin="0,0,0,58" Grid.RowSpan="2"/>
        <TextBox x:Name="WTSeek" Text="{Binding RegexPattern, Mode=TwoWay}"
                 Grid.Column="1" Grid.Row="4" Margin="0,1"/>

        <CheckBox x:Name="IsTwoStatement" Content="Использовать 2 выражения"
                  Grid.Column="1" Grid.Row="5"
                  Command="{Binding CheckBoxCheckCommand}"
                  CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"
                  Margin="11,4,10,40"/>

        <TextBlock Grid.Row="5" Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Height="19" Margin="4,25,0,16" Width="264"> 
                   Для получения Api Hash и Api ID тебе
                   <Hyperlink NavigateUri="https://my.telegram.org/apps"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="https://my.telegram.org/apps">
                        сюда
                   </Hyperlink>
        </TextBlock>


        <Button Content="Экспорт в файл" Command="{Binding SaveCommand}" Grid.Row="6"/>
        <Button Content="Импорт из файла" Command="{Binding OpenCommand}" Grid.Row="6"
                Grid.Column="1"/>
    </Grid>
</Window>
