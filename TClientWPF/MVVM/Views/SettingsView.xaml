<Window x:Class="TClientWPF.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:TClientWPF.Views" 
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="425.547" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding WindowClosingCommand}"
                                       CommandParameter="$eventArgs"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Height="28" Margin="58,22,40,10" Width="58">Api ID</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" 
                   Height="21" Margin="54,22,30,17" Width="72">Api Hash</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Height="22" Margin="44,22,20,17" Width="92">Phone number</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Height="20" Margin="54,22,30,18" Width="72">Channel</TextBlock>
        <TextBlock Grid.Row="4" Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Height="29" Margin="44,21,20,10" Width="92">What to seek</TextBlock>

        <TextBox Name="ApiId" Text="{Binding Api_id, Mode=TwoWay}"
                 Grid.Column="1" Grid.Row="0"/>
        <TextBox Name="ApiHash" Text="{Binding Api_hash, Mode=TwoWay}"
                 Grid.Column="1" Grid.Row="1" Margin="0,0,0,58" Grid.RowSpan="2"/>
        <TextBox Name="PhoneNumber" Text="{Binding Phone_Number, Mode=TwoWay}"
                 Grid.Column="1" Grid.Row="2" Margin="0,0,0,58" Grid.RowSpan="2"/>
        <TextBox Name="Channel" Text="{Binding ObservedChannel, Mode=TwoWay}"
                 Grid.Column="1" Grid.Row="3" Margin="0,5"/>
        <TextBox x:Name="WTSeek" Text="{Binding RegexPattern, Mode=TwoWay}"
                 Grid.Column="1" Grid.Row="4" Margin="0,1"/>

        <CheckBox x:Name="IsTwoStatement" Content="Использовать 2 выражения"
                  Grid.Column="1" Grid.Row="5"
                  Command="{Binding CheckBoxCheckCommand}"
                  CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"
                  Margin="11,4,10,40"/>

        <TextBlock Grid.Row="5" Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Height="19" Margin="11,25,13,16" Width="240"> 
                   To get your Api Hash and Api ID go
                   <Hyperlink NavigateUri="https://my.telegram.org/apps"
                              Command="{Binding NavigateCommand}"
                              CommandParameter="https://my.telegram.org/apps">
                        here
                   </Hyperlink>
        </TextBlock>


        <Button Content="Export to file" Command="{Binding SaveCommand}" Grid.Row="6"/>
        <Button Content="Import from file" Command="{Binding OpenCommand}" Grid.Row="6"
                Grid.Column="1"/>
    </Grid>
</Window>
