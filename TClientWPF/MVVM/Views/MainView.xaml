<Window x:Class="TClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bh="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        ShowInTaskbar="{Binding ShowInTaskbar}"
        WindowState="{Binding WindowState}"
        Title="TClient" Height="634" Width="800" WindowStartupLocation="CenterScreen">

    <bh:Interaction.Triggers>
        <bh:EventTrigger EventName = "Closing" >
            <bh:InvokeCommandAction Command = "{Binding HideWindowCommand}"
                                    PassEventArgsToCommand="True"/>
        </bh:EventTrigger>
    </bh:Interaction.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="586*"/>
        </Grid.RowDefinitions>

        <Grid Background="AliceBlue"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Настройки"
                    Width="100"
                    Height="25"
                    IsEnabled="{Binding IsSettingsEnable}"
                    Command="{Binding SettingsCommand}" />
        </Grid>

        <Grid Grid.Column="1"
              Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="217*"/>
                <ColumnDefinition Width="118*"/>
                <ColumnDefinition Width="277*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="49*"/>
                <RowDefinition Height="61*"/>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="307*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Image Source="pack://application:,,,/Images/pngwing.png"
                   Grid.RowSpan="2"/>

            <Button Content="Подключиться"
                    Grid.Column="2"
                    Grid.Row="1"
                    Command="{Binding StartCommand}"
                    IsEnabled="{Binding IsConnectEnable}" Margin="38,10,32,12"/>

            <Button Content="Отключиться"
                    Grid.Row="2"
                    Grid.Column="2"
                    Command="{Binding StopCommand}"
                    IsEnabled="{Binding IsDisconnectEnable}" Margin="22,10"/>

            <TextBlock Text="ищем текст" 
                       Grid.Row="2" Margin="23,20,25,0"/>

            <TextBox Grid.Row="3"
                     Text="{Binding RegexPattern, Mode=OneWay}" 
                     IsReadOnly="True" Margin="10,10,10,9"/>

            <ComboBox x:Name="comboBox"
                      Grid.Row="3"
                      Grid.Column="2"
                      DisplayMemberPath="Value.Title"
                      ItemsSource="{Binding ChatsList}"
                      SelectedItem="{Binding SelectedChannelData}" Margin="16,10,22,10"/>

            <TextBlock Text="в канале" 
                       Grid.Row="3"
                       Grid.Column="1" Margin="40,20,0,0"/>

            <TextBlock Grid.Row="4" Margin="38,21,40,10">
                Дополнительная инфа
            </TextBlock>

            <Button Content="Проверить историю сообщений"
                    Grid.Row="4"
                    Grid.Column="2"
                    Command="{Binding CheckMsgHistoryCommand}"
                    IsEnabled="{Binding IsCheckMsgHistoryEnable}" Margin="32,5,10,5"/>

            <TextBox Grid.Row="5"
                     Grid.ColumnSpan="3"
                     x:Name="loger"
                     IsReadOnly="True"
                     Text="{Binding Log, Mode=OneWay}"/>

            <StatusBar Grid.Row="6"
                       Grid.ColumnSpan="3">

                <StatusBarItem>
                    <TextBlock Text="Статус:"/>
                </StatusBarItem>

                <StatusBarItem>
                    <Image Width="30" Height="20"
                           Source= "{Binding IsOnline}"/>
                </StatusBarItem>

                <Separator/>

                <StatusBarItem>
                    <TextBlock Text="Пользователь:"/>
                </StatusBarItem>

                <StatusBarItem>
                    <TextBlock Text="{Binding User}" Width="40"/>
                </StatusBarItem>

                <Separator/>

                <StatusBarItem>
                    <TextBlock Text="Кол-во пересланных сообщений:"/>
                </StatusBarItem>

                <StatusBarItem>
                    <TextBlock Text="{Binding CountOfForwardedMsg}" Width="25"/>
                </StatusBarItem>

            </StatusBar>
        </Grid>
    </Grid>
</Window>
